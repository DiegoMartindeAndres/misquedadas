                <form method="post" class= "mt-auto" action="/api/asiste/?que=<%= quedadas[i] %>&nombre=<%= user %>">
                  <button class="fas fa-check-circle check-asiste" type="submit"  onClick="return confirm('多Confirmas dejar de asistir a la quedada <%= quedadas[i] %>?');" ></button>
                </form>
                <%= quedadas[i] %>
