<div class="col-md lista-quedadas-container desplegable">
  <h2>Otras Quedadas</h2>
    <ul class="list-group-flush lista-quedadas">
      <%for(var i=0; i<quedadas.length; i++) { %>
          <%if (quedadas[i] == quedada.que ) { %>
