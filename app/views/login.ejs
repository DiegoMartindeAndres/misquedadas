  <body id="LoginForm" class="d-flex align-items-center">
    <div class="container login-container">
      <img src="/img/logo.png" alt="">
      <h2>mis quedadas</h2>
      <div class="login-form">
          <div class="panel">
            <p>Accede a Mis quedadas v2 introduciendo tu usuario y contraseña</p>
          </div>
          <form id="Login" action="/login" method="post" enctype='application/json'>

            <div class="form-group">
              <input type="text" class="form-control" name="nombre" placeholder="Usuario">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="clave" placeholder="Contraseña">
            </div>
            <button type="submit" class="btn btn-primary btn-block button-login">Login</button>
          </form>
      </div>
    </div>
  </body>

  <script src="/js/json-formdata.js"></script>

  <script>
  /* Common use case, similar to usual FormData object */
  var form = document.querySelector('form');
  form.addEventListener('submit', function (e) {
    e.preventDefault();
    var xhr = new XMLHttpRequest();
    xhr.open('POST', '/login');
    xhr.setRequestHeader('Content-Type', 'application/json');
    xhr.send(JSON.stringify(new JSONFormData(form).formData));
    xhr.addEventListener('loadend', function() {
      // Callback...
      window.location.href = '/quedada';
    }, false);
  }, false);
</script>
